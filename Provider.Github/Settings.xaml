<UserControl x:Class="Provider.Github.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Provider.Github"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="280"><Run Text="Please enter your Github Personal Token in order to allow access to repositories and issue tracking. This app will post and change issues (if you choose those actions) so write privileges should be allowed."/><LineBreak/><Run/></TextBlock>
        <Label x:Name="label" Content="Github Token:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,79,0,0"/>
        <TextBox x:Name="githubToken" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="280" Margin="10,105,0,0"/>
        <Button x:Name="okButton" Content="OK" HorizontalAlignment="Left" VerticalAlignment="Top" Width="81" Margin="208,147,0,0" Style="{DynamicResource PrimaryButton}"/>
        <Button x:Name="testTokenButton" Content="Test Token" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10,147,0,0" Click="TestTokenButton_Click"/>
        <Button x:Name="cancelButton" Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Top" Width="82" Margin="121,147,0,0"/>
    </Grid>
</UserControl>
